@using WebCalculator.Models
@model User
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/site.css")" rel="stylesheet" type="text/css" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login</title>

</head>
<body>
    <div class="container"> 
        
        


        <div class="row">
            <div class="wccentereddiv wcresponsive">
                <div class="wctitle">Welcome to İsmail Şenönder's Web Calculator! Please Log In.</div>
                <div class="col-sm-12 col-md-10 col-md-offset-1">
                    <form action="" id="loginForm">
                        <div class="form-group input-group">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = Html.DisplayNameFor(n => n.UserName) })
                        </div>
                        <div class="form-group input-group">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = Html.DisplayNameFor(n => n.Password) })
                        </div>
                        
                        <div class="form-group">
                            <input type="submit" class="btn btn-def btn-block" formaction="/user/loginuser" value="Login" />
                        </div>
                        

                    </form>
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Message</div>
                    }
                </div>
            </div>
        </div>


    </div>
</body>
</html>
